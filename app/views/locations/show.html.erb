<p id="notice"><%= notice %></p>

<h1>Premeditated Portal Locations</h1>

<h3 class="text-muted">Your current place in time & space</h3>

<p class="text-muted">
  <%= @location.full_street_address %> <small><%= link_to  fa_icon('pencil', text: 'Edit'), edit_location_path(@location) %></small>
</p>

<div id="map-canvas"></div>

<h3>The closest buses are...</h3>
<% @buses.each do |bus| %>

<div class='well'>
  <strong>Route:</strong><%= bus["ROUTE"] %> <%= bus["DIRECTION"] %> <br>
  <strong>Portal Number:</strong><%= bus["VEHICLE"] %> <br>
  <strong>Next Opening:</strong><%= bus["TIMEPOINT"] %>
</div>

<% end %>

<% if @buses.empty? %>
<h3>
  No portals near you broh!, get to wiggety wiggety walkin' son!, or <%=
  link_to 'change your location', edit_location_path(@location) %>
</h3>
<% end %>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_maps_api_key'] %>"></script>

<script>
  function intialize() {
    var myLocation = new google.maps.LatLng(<%= @location.latitude %>, <%= @location.longitude %>);

    var mapOptions = {
      center: myLocation,
      zoom: 15
    };

    var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

    var personIcon = "<%= image_path 'man_icon.png' %>";

    var MyMarker = new google.maps.Marker({
      position: myLocation,
      map: map,
      animation: google.maps.Animation.DROP,
      title: 'My Location',
      icon: personIcon
    });

    var nearbyBuses = <%= raw @buses.to_json %>;

    nearbyBuses.forEach(function(bus) {
      var busLocation = new google.maps.LatLng(bus['LATITUDE'], bus['LONGITUDE']);

      var busMarker = new google.maps.Marker({
        position: busLocation,
        map: map,
        animation: google.maps.Animation.DROP,
        title: bus['VEHICLE']
      });

      var contentString =
        `<div id="content">
          <h2>Bus ${bus['VEHICLE']} - ${bus['DIRECTION']}</h2>
          <div id="bodyContent">
          <p>Next Stop: ${bus['TIMEPOINT']}</p>
        </div>
    </div>`;


    var infoWindow = new google.maps.InfoWindow({
      content: contentString
    });

    google.maps.event.addListener(busMarker, 'click', function() {
      infoWindow.open(map, busMarker);
      });
    });
  }

  google.maps.event.addDomListener(window, 'load', intialize);
</script>

